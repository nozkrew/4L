{% extends 'base_admin.html.twig' %}

{% block body %}
 
    {# Affichage des flashbags #}
{% for message in app.session.flashbag.get('success') %}
    <div class="alert alert-success"  >
        <span>
            {{ message|raw }}
        </span>
        <button type="button" data-dismiss="alert" aria-label="Close" class="close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
{% endfor %}
{% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-info" >
        <span>
            {{ message|raw }}
        </span>
        <button type="button" data-dismiss="alert" aria-label="Close" class="close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
{% endfor %}
{% for message in app.session.flashbag.get('error') %}
    <div class="alert alert-danger" >
        <span>
            {{ message|raw }}
        </span>
        <button type="button" data-dismiss="alert" aria-label="Close" class="close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
{% endfor %}
{% for message in app.session.flashbag.get('warning') %}
    <div class="alert alert-warning" >
        <span>
            {{ message|raw }}
        </span>
        <button type="button" data-dismiss="alert" aria-label="Close" class="close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
{% endfor %}
{# Fin flashbags #}
    
<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">{{app.user.site.name}}</div>
      <div class="list-group list-group-flush">
        <a href="{{path("app_default_index", {'sitename':app.user.site.slug})}}" target="_blank" class="list-group-item list-group-item-action bg-light"><i class="fas fa-eye"></i> Voir mon site</a>
        <a href="{{path("admin_default_index")}}" class="list-group-item list-group-item-action bg-light">Accueil</a>
        <a href="{{path("admin_default_post", {"slug":"le-4l-trophy"})}}" class="list-group-item list-group-item-action bg-light">Le 4L Trophy</a>
        <a href="{{path("admin_partner_index")}}" class="list-group-item list-group-item-action bg-light">Nos partenaires</a>
        <a href="{{path("admin_default_post", {"slug":"l-equipage"})}}" class="list-group-item list-group-item-action bg-light">L'équipage</a>
        <a href="{{path("admin_image_index")}}" class="list-group-item list-group-item-action bg-light">Nos photos</a>
        <a href="{{path("admin_article_index")}}" class="list-group-item list-group-item-action bg-light">Articles</a>
        <a href="{{path("admin_contact_index")}}" class="list-group-item list-group-item-action bg-light">Contact</a>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
          <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-chevron-left"></i> Reduire menu</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
