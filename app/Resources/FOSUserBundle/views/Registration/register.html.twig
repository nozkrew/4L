{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}

    <div class="login-form">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        
            <h2 class="text-center">Inscription</h2>
            
            <div class="form-group">
                {{form_label(form.email, 'Email')}}
                {{form_widget(form.email, {'attr':{'class':'form-control', 'placeholder':"Email"}})}}
             </div>
             
             <div class="form-group">
                {{form_label(form.username, 'Pseudo')}}
                {{form_widget(form.username, {'attr':{'class':'form-control', 'placeholder':"Pseudo"}})}}
             </div>
             
             <div class="form-group">
                {{form_label(form.plainPassword.first, 'Mot de passe')}}
                {{form_widget(form.plainPassword.first, {'attr':{'class':'form-control', 'placeholder':"Mot de passe"}})}}
             </div>
             
             <div class="form-group">
                {{form_label(form.plainPassword.second, 'Répeter le mot de passe')}}
                {{form_widget(form.plainPassword.second, {'attr':{'class':'form-control', 'placeholder':"Répeter le mot de passe"}})}}
             </div>
             
             <div class="form-group">
                {{form_label(form.firstname, 'Prénom')}}
                {{form_widget(form.firstname, {'attr':{'class':'form-control', 'placeholder':"Prénom"}})}}
             </div>
             
             <div class="form-group">
                {{form_label(form.lastname, 'Nom')}}
                {{form_widget(form.lastname, {'attr':{'class':'form-control', 'placeholder':"Nom"}})}}
             </div>
        
            {{ form_widget(form) }}
            
            <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit" value="Inscription" />
            </div>
        {{ form_end(form) }}
    </div>
{% endblock fos_user_content %}
