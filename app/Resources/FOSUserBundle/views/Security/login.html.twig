{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
 
<div class="login-form">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="text-center">Connexion</h2>
        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
           <label for="username">Email / Nom d'utilisateur</label>
           <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Email / Nom d'utilisateur" />
        </div>

        <div class="form-group">
           <label for="password">Mot de passe</label>
           <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Mot de passe" />
        </div>
        
        {% if error %}
            <div class="p-3 mb-2 bg-danger text-white">
                Identifiants invalide
            </div>
        {% endif %}

        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Connexion" />
        </div>
            
        <div class="clearfix">
            <label for="remember_me" class="pull-left checkbox-inline">
                 <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Se souvenir de moi
            </label>
            <a href="{{path('fos_user_resetting_request')}}" class="pull-right">Mot de passe oublié ?</a>
        </div>
    </form>
    <p class="text-center"><a href="{{path('fos_user_registration_register')}}">Créer un compte</a></p>
</div>
 
{% endblock fos_user_content %}