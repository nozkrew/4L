{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/post.css') }}" />
{% endblock %}

{% block title %}4L Trophy - {{site.name}} - Articles{% endblock %}

{% block linkHome %}
   {{path('app_default_index', {'sitename':site.slug})}}
{% endblock %}
    
{% block menuSection %}
    
    <li class="nav-item">
      <a class="nav-link" href="{{path('app_default_index', {'sitename':site.slug})}}">Accueil</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{path('app_imagesite_index', {'sitename':site.slug})}}">Photos</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{path('app_article_index', {'sitename':site.slug})}}">Articles</a>
    </li>
    
  {% endblock %}

{% block body %}
    
    <header class="masthead text-center text-white d-flex"  {% block imageHeader %}{% endblock %} >
      <div class="container my-auto">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <h1 class="text-uppercase">
              <strong>{% block titlePost %}{% endblock %}</strong>
            </h1>
            <hr>
          </div>
        </div>
      </div>
    </header>
    
    
    {% block container %}
    {% endblock %}
    </div>
{% endblock %}


{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{asset('build/post.js')}}"></script>
{% endblock %}