<section class="p-0" id="{{id}}">
    <div class="container-fluid p-0">
      <div class="row no-gutters popup-gallery">
       {% for photo in photos%}
        <div class="col-lg-3 col-sm-6">
          <a class="portfolio-box" href="{{asset('download/'~photo.site.slug~"/"~photo.name)}}">
              <img class="img-fluid" src="{{asset('download/'~photo.site.slug~"/"~photo.name) | imagine_filter('my_thumb_filter')}}" alt="{{photo.alt}}" style="width:100%">
            <div class="portfolio-box-caption">
              <div class="portfolio-box-caption-content">
                <div class="project-category text-faded">
                  {{photo.date|date('d/m/Y')}}
                </div>
                <div class="project-name">
                  {{photo.alt}}
                </div>
              </div>
            </div>
          </a>
        </div>
        {% endfor %}
      </div>
      <div class="row margin-top margin-bottom">
        <div class="col-lg-12 mx-auto text-center">
            <a class="btn btn-dark btn-xl js-scroll-trigger" href="{{path('app_imagesite_index', {"sitename":sitename})}}">Voir toutes les photos</a>
        </div>
      </div>
    </div>
  </section>